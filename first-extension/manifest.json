{
    "name": "Sherri's Awesome Extension",
    "author": "Sherri Wheeler (@SyntaxSeed)",
    "version": "1.5",
    "description": "Chrome extension lesson from Ladies Learning Code.",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "declarativeContent"
    ],
    "icons": {
        "16": "images/dice_16.png",
        "32": "images/dice_32.png",
        "48": "images/dice_48.png",
        "128": "images/dice_128.png"
    },
    "page_action": {
        "default_icon": {
            "16": "images/dice_16.png",
            "32": "images/dice_32.png",
            "48": "images/dice_48.png",
            "128": "images/dice_128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "onload.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": [
            "script.js"
        ],
        "persistent": false
    }
}
